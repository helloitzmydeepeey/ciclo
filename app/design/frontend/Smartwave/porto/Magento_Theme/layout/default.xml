<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
    <css src="Magento_Theme::css/mycustom.css"/>
    </head>
    <body>
        <move element="top.search" destination="header.wrapper" after="logo"/>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_img_width" xsi:type="number">111</argument>
                <argument name="logo_img_height" xsi:type="number">50</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="footer" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" remove="true"/>
        <!-- <referenceBlock name="header.links"  remove="true"/> -->
        <referenceContainer name="before.body.end">
    <block class="Magento\Framework\View\Element\Template" name="popup.login" template="Magento_Theme::popup_login.phtml"   cacheable="false"/>
    <block class="Magento\Framework\View\Element\Template" name="popup.register" template="Magento_Theme::popup_register.phtml"  cacheable="false"/>
    <!--<block class="Magento\Framework\View\Element\Template" name="popup.forgotpassword" template="Magento_Theme::popup_forgotpassword.phtml" />-->
</referenceContainer>
    </body>
</page>
