<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Create our type CityGridDataProvider -->
    <virtualType name="CityGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Customer\City\Model\Resource\City\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">CityGridFilterPool</argument> <!-- Define new object for filters -->
        </arguments>
    </virtualType>

    <!-- Create our type CityGridFilterPool -->
    <virtualType name="CityGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Type for cities_cities_listing_data_source -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="cities_cities_listing_data_source" xsi:type="string">Customer\City\Model\ResourceModel\Grid\City\Collection</item>
            </argument>
        </arguments>
    </type>

    <!-- Simulate our class Customer\City\Model\ResourceModel\Grid\City\Collection -->
    <virtualType name="Customer\City\Model\ResourceModel\Grid\City\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">customer_city</argument>
            <argument name="resourceModel" xsi:type="string">Customer\City\Model\ResourceModel\City</argument>
        </arguments>
    </virtualType>
</config>
