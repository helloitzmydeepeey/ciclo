<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Create our type ProvinceGridDataProvider -->
    <virtualType name="ProvinceGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Customer\Province\Model\Resource\Province\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">ProvinceGridFilterPool</argument> <!-- Define new object for filters -->
        </arguments>
    </virtualType>

    <!-- Create our type ProvinceGridFilterPool -->
    <virtualType name="ProvinceGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Type for provinces_provinces_listing_data_source -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="provinces_provinces_listing_data_source" xsi:type="string">Customer\Province\Model\ResourceModel\Grid\Province\Collection</item>
            </argument>
        </arguments>
    </type>

    <!-- Simulate our class Customer\Province\Model\ResourceModel\Grid\Province\Collection -->
    <virtualType name="Customer\Province\Model\ResourceModel\Grid\Province\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">customer_province</argument>
            <argument name="resourceModel" xsi:type="string">Customer\Province\Model\ResourceModel\Province</argument>
        </arguments>
    </virtualType>
</config>
