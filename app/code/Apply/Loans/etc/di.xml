<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Create our type LoanGridDataProvider -->
    <virtualType name="LoanGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Apply\Loans\Model\Resource\Loan\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">LoanGridFilterPool</argument> <!-- Define new object for filters -->
        </arguments>
    </virtualType>

    <!-- Create our type LoanGridFilterPool -->
    <virtualType name="LoanGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Type for loans_loans_listing_data_source -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="loans_loans_listing_data_source" xsi:type="string">Apply\Loans\Model\ResourceModel\Grid\Loan\Collection</item>
            </argument>
        </arguments>
    </type>

    <!-- Simulate our class Apply\Loans\Model\ResourceModel\Grid\Loan\Collection -->
    <virtualType name="Apply\Loans\Model\ResourceModel\Grid\Loan\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">apply_loan</argument>
            <argument name="resourceModel" xsi:type="string">Apply\Loans\Model\ResourceModel\Loan</argument>
        </arguments>
    </virtualType>
</config>
