                    </item>
                </argument>
            </filterInput>
            <!-- Motorcycle Brand Filter -->
             <filterInput name="motorcycle_brand">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataScope" xsi:type="string">motorcycle_brand</item> <!-- Column name in DB -->
                        <item name="label" xsi:type="string" translate="true">Motorcycle Brand</item> <!-- Label on grid -->
                    </item>
                </argument>
            </filterInput>
        <!-- Motorcycle Brand Filter -->
