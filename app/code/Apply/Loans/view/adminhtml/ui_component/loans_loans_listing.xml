                        <item name="label" xsi:type="string" translate="true">Application ID</item> <!-- Label on grid -->
                    </item>
                </argument>
            </filterInput>
            <!-- Client Name Filter -->
             <filterInput name="customer_entity_id">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataScope" xsi:type="string">customer_entity_id</item> <!-- Column name in DB -->
                        <item name="label" xsi:type="string" translate="true">Client Name</item> <!-- Label on grid -->
                    </item>
