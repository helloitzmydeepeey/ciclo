                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataScope" xsi:type="string">loan_dealer_branch_key</item> <!-- Column name in DB -->
                        <item name="label" xsi:type="string" translate="true">Dealer Branch Key</item> <!-- Label on grid -->
                    </item>
