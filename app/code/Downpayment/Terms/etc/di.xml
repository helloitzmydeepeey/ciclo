<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Create our type TermsGridDataProvider -->
    <virtualType name="TermsGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Downpayment\Terms\Model\Resource\Term\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">TermsGridFilterPool</argument> <!-- Define new object for filters -->
        </arguments>
    </virtualType>

    <!-- Create our type TermsGridFilterPool -->
    <virtualType name="TermsGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Type for terms_term_listing_data_source -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="terms_term_listing_data_source" xsi:type="string">Downpayment\Terms\Model\ResourceModel\Grid\Term\Collection</item>
            </argument>
        </arguments>
    </type>

    <!-- Simulate our class Downpayment\Terms\Model\ResourceModel\Grid\Term\Collection -->
    <virtualType name="Downpayment\Terms\Model\ResourceModel\Grid\Term\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">downpayment_terms</argument>
            <argument name="resourceModel" xsi:type="string">Downpayment\Terms\Model\ResourceModel\Term</argument>
        </arguments>
    </virtualType>
</config>
